<div class="container text-md-center" style="margin-top: 20%">
        <p>@ViewData["message"]</p>
    @if ((bool) ViewData["error"]! == false)
    {
        <form asp-action="Create">
        <input type="hidden" name="memberID" value="@ViewData["memberID"]"/>
        <input type="hidden" name="dvdCopyID" value="@ViewData["dvdCopyID"]"/>
        <input type="hidden" name="loanTypeID" value="@ViewData["loanTypeID"]"/>
        <input type="hidden" name="confirm" value="true" />
        <button type="Submit" class="btn btn-dark">Confirm Loan</button>
        </form>
    }    
</div>