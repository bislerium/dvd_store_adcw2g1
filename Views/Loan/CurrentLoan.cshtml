@model IEnumerable<dvd_store_adcw2g1.Models.ViewModels.DVDCopyLoan>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="d-flex justify-content-between mt-4 ml-5 mb-md-5" style="width: 85%; margin-left: 7%;">

    <h1>Currently On Loan</h1>
    
</div>
<div class="table-responsive container-fluid ml-5 mr-5" style="width: 90%;">
    <table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">
                DVD Title
            </th>
            <th scope="col">
                DVD Copy Number
            </th>
            <th scope="col">
                Member
            </th>
            <th scope="col">
                Loaned Date
            </th>
            <th scope="col">
                Total Loans
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DVDTitleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CopyNumber)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.MemberName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalLoans)
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>