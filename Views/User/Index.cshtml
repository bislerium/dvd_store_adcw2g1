@model IEnumerable<dvd_store_adcw2g1.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between mt-4 ml-5 mb-md-5" style="width: 85%; margin-left: 7%;">

    <h1>Users</h1>
    
</div>
<div class="d-flex justify-content-between" style="margin-left: 7%; margin-bottom: 2%; margin-right: 6%">
    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#addmodel"><i class="fas fa-add"></i></button>
</div>
<div class="table-responsive container-fluid ml-5 mr-5" style="width: 90%;">
    <table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.UserType)
            </th>
@*            <th scope="col">
                @Html.DisplayNameFor(model => model.UserPassword)
            </th>*@
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.UserPassword)
                </td>*@
                <td>
                    <a asp-action="EditPost" asp-route-id="@item.UserNumber"><i class="fas fa-pen-to-square"></i></a> |
                    <a asp-action="DeleteConfirmed" asp-route-id="@item.UserNumber"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<!-- Modal -->
<!--Add-->
<div class="modal fade" id="addmodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <form asp-action="Create">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add Users</h5>
@*        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>*@
      </div>
      <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="UserName" class="col-form-label">Username</label>
                <input name="UserName" class="form-control" />
                <span for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="UserType" class="col-form-label">Type</label>
                <select class="form-select" name="UserType">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
                <span for="UserType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="UserPassword" class="col-form-label">Password</label>
                <input name="UserPassword" class="form-control" />
                <span for="UserPassword" class="text-danger"></span>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" value="Create" class="btn btn-primary">Add</button>
      </div>
    </form>
    </div>
  </div>
</div>

<!--Font Awesome icon-->
<script src="https://kit.fontawesome.com/10d12be10d.js" crossorigin="anonymous"></script>