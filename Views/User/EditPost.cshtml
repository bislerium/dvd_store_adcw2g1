@model dvd_store_adcw2g1.Models.User

@{
    ViewData["Title"] = "EditPost";
}

<div style="margin: 5%">
    <div class="d-flex flex-wrap" style="margin-bottom: 2%; margin-right: 6%; margin-top: 5%">
        @if(@Context.Session.GetString("role") == "Admin")
        {
            <a asp-action="Index" style="margin-right: 5%"><i class="fas fa-chevron-left" style="font-size:36px"></i></a>
        }
        <h2>Edit User Details</h2>
    </div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserNumber" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
                @if (@Context.Session.GetString("role") == "Admin")
                {
                    <div class="form-group" style="margin-top: 5%">
                        <label asp-for="UserType" class="control-label"></label>
                        <input asp-for="UserType" class="form-control" />
                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group" style="margin-top: 5%">
                        <input type="hidden" asp-for="UserType" class="form-control" />
                    </div>
                }
            <div class="form-group" style="margin-top: 5%">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5%">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
