@model IEnumerable<dvd_store_adcw2g1.Models.MembershipCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between mt-4 ml-5 mb-md-5" style="width: 85%; margin-left: 7%;">

    <h1>Category</h1>
    
</div>
<div class="d-flex justify-content-between" style="margin-left: 7%; margin-bottom: 2%; margin-right: 6%">
    <form asp-controller="Member" asp-action="Index" class="d-flex flex-row-reverse">
        <input type="search" name="SearchString" placeholder="Enter Surname" id="search-focus" id="form1" class="form-control"/>
        <button type="submit" value="Search" class="btn btn-dark">
            <i class="fas fa-search"></i>
        </button>
    </form>
    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#addmodel"><i class="fas fa-add"></i></button>
</div>
<div class="table-responsive container-fluid ml-5 mr-5" style="width: 90%;">
<table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.MembershipCategoryDescription)*@ Category
            </th>
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.MembershipCategoryTotalLoans)*@ Total Loans
            </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategoryTotalLoans)
            </td>
            <td>
                <a asp-action="EditPost" asp-route-id="@item.MembershipCategoryNumber"><i class="fas fa-pen-to-square"></i></a> |
@*                <a asp-action="Details" asp-route-id="@item.MembershipCategoryNumber">Details</a> |*@
                <a asp-action="DeleteConfirmed" asp-route-id="@item.MembershipCategoryNumber"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<!-- Modal -->
<!--Add-->
<div class="modal fade" id="addmodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <form asp-action="Create">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add DVD Category</h5>
@*        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>*@
      </div>
      <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="MembershipCategoryDescription" class="control-label">Category</label>
                <input name="MembershipCategoryDescription" class="form-control" />
                <span for="MembershipCategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MembershipCategoryTotalLoans" class="control-label">Total Loans</label>
                <input name="MembershipCategoryTotalLoans" class="form-control" />
                <span for="MembershipCategoryTotalLoans" class="text-danger"></span>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" value="Create" class="btn btn-primary">Add</button>
      </div>
    </form>
    </div>
  </div>
</div>