@model IEnumerable<dvd_store_adcw2g1.Models.DVDCopy>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between mt-4 ml-5 mb-md-5" style="width: 85%; margin-left: 7%;">
    <h1>DVD Copy</h1>
</div>
<div class="d-flex justify-content-between" style="margin-left: 7%; margin-bottom: 2%; margin-right: 6%">
    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#addmodel"><i class="fas fa-add"></i></button>
</div>
<div class="table-responsive container-fluid ml-5 mr-5" style="width: 90%;">
    <table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">
                Copy Number
            </th>
            <th scope="col">
                Title
            </th>
            <th scope="col">
                Purchase Date
            </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CopyNumber)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CopyNumber">@Html.DisplayFor(modelItem => item.DVDTitle.DVDTitleName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePurchased)
                </td>
                <td>
                    <a asp-action="EditPost" asp-route-id="@item.CopyNumber"><i class="fas fa-pen-to-square"></i></a> |
    @*                <a asp-action="Details" asp-route-id="@item.CopyNumber">Details</a> |*@
                    <a asp-action="DeleteConfirmed" asp-route-id="@item.CopyNumber"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<!-- Modal -->
<!--Add-->
<div class="modal fade" id="addmodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <form asp-action="Create">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add DVD Category</h5>
@*        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>*@
      </div>
      <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label for="DVDNumber" class="control-label">DVD</label>
                <select name="DVDNumber" class ="form-control" asp-items="ViewBag.DVDNumber"></select>
            </div>
            <div class="form-group">
                <label for="DatePurchased" class="control-label">Purchase Date</label>
                <input type="date" name="DatePurchased" class="form-control" />
                <span for="DatePurchased" class="text-danger"></span>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" value="Create" class="btn btn-primary">Add</button>
      </div>
    </form>
    </div>
  </div>
</div>