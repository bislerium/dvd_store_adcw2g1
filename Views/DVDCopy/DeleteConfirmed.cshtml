@model dvd_store_adcw2g1.Models.DVDCopy

@{
    ViewData["Title"] = "DeleteConfirmed";
}
<div class="container">
<div class="d-flex flex-wrap" style="margin-bottom: 2%; margin-right: 6%; margin-top: 5%">
        <a asp-action="Index" style="margin-right: 5%"><i class="fas fa-chevron-left" style="font-size:36px"></i></a>
        <h2>Delete DVD Copy Details</h2>
 </div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DVDCopy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DVDTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDTitle.DVDNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatePurchased)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePurchased)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="CopyNumber" />
        <input type="submit" value="Delete" style="background-color: #B61313; color: #fff" />
    </form>
</div>
</div>