<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dvd_store_adcw2g1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dvd_store_adcw2g1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <title>Hexashop Ecommerce HTML CSS Template</title>


    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.css">
    
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav me-auto" style="text-align:center">
                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Home" asp-action="Dashboard">Home
                    <span class="visually-hidden">(current)</span>
                  </a>
                </li>
                <li class="nav-item dropdown">
                   <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Member</a>
                  <div class="dropdown-menu bg-dark" style="text-align: center">
                    <a class="dropdown-item text-light" asp-controller="Member" asp-action="index">Member</a>
                    <a class="dropdown-item text-light" asp-controller="MembershipCategory" asp-action="index">Category</a>
                  </div>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">DVD</a>
                  <div class="dropdown-menu bg-dark" style="text-align: center">
                    <a class="dropdown-item text-light" asp-controller="DVDTitle" asp-action="index">DVD</a>
                    <a class="dropdown-item text-light" asp-controller="DVDCategory" asp-action="index">Category</a>
                    <a class="dropdown-item text-light" asp-controller="DVDCopy" asp-action="index">Copy</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-light" asp-controller="Actor" asp-action="index">Actor</a>
                    <a class="dropdown-item text-light" asp-controller="Producer" asp-action="index">Producer</a>
                    <a class="dropdown-item text-light" asp-controller="Studio" asp-action="index">Studio</a>
                  </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Loan</a>
                  <div class="dropdown-menu bg-dark" style="text-align: center">
                    <a class="dropdown-item text-light" asp-controller="Loan" asp-action="index">Loan</a>
                    <a class="dropdown-item text-light" asp-controller="LoanType" asp-action="index">Type</a>
                  </div>
                  
                </li>
              </ul>
              <a class="btn btn-dark" style="margin-right:5%" asp-controller="Home" asp-action="logout">Log Out</a>
            </div>
</nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        
    </footer>
    

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/js/owl-carousel.js"></script>
    
    <script src="~/js/accordions.js"></script>
    <script src="~/js/datepicker.js"></script>
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imgfix.min.js"></script> 
    <script src="~/js/slick.js"></script> 
    <script src="~/js/lightbox.js"></script> 
    <script src="~/js/isotope.js"></script> 
    
    <!-- Global Init -->
    <script src="~/js/custom.js"></script>

    <script>

        $(function() {
            var selectedClass = "";
            $("p").click(function(){
            selectedClass = $(this).attr("data-rel");
            $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              $("."+selectedClass).fadeIn();
              $("#portfolio").fadeTo(50, 1);
            }, 500);
                
            });
        });

    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
