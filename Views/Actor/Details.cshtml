@model IEnumerable<dvd_store_adcw2g1.Models.DVDTitle>

<div class="d-flex flex-wrap" style="margin-left: 7%; margin-bottom: 2%; margin-right: 6%; margin-top: 5%">
    <a asp-action="Index" style="margin-right: 5%"><i class="fas fa-chevron-left" style="font-size:36px"></i></a>
    <h2>DVD related to Actor</h2>
</div>
<div class="table-responsive container-fluid ml-5 mr-5" style="width: 90%;">
    <table class="table table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">DVD Title</th>
            <th scope="col">DVD Number</th>
            <th scope="col">Release Date</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.DVDTitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DVDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReleased)
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<!--Font Awesome icon-->
<script src="https://kit.fontawesome.com/10d12be10d.js" crossorigin="anonymous"></script>